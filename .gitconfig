[user]
	name = Gary Blackwood
	email = gareeblackwood@gmail.com
[color]
	ui = true
[alias]
        diff = diff --color
	log = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
        st = status
        co = checkout
        di = diff
        pl = pull
        ps = push
        lo = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
[merge]
	ff = only
[push]
	default = simple
	followTags = true
[status]
	showUntrackedFiles = all
