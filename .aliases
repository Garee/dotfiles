
# Aliases
alias cat="bat"
alias ls="eza -la --git"
alias top="htop"
alias grep="grep --color=auto"
alias e="emacs"
alias g="git"
alias ..="cd .."
alias ...="cd ../.."
alias mem="free -m -l -t"
alias disk="df -h"
alias ga="git add"
alias gaa="git add --all"
alias gb="git branch"
alias gc="git commit"
alias gs="git status"
